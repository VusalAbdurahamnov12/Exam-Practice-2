@using WebApplication1.Models

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

@model List<Category>


<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Tables</h1>
        <a asp-action="Create" asp-controller="Home" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var slider in Model)
            {
                <tr>
                    <th scope="row">@slider.Id</th>
                    <td>@slider.Name</td>
                    <td>
                        <a asp-action="Update" asp-controller="Home" asp-route-id="@slider.Id" class="btn btn-warning">Edit</a>
                        <a type="submit" asp-action="Delete" asp-controller="Home" asp-route-id="@slider.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

